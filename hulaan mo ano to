<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #FAEEE6;
        }
        #content {
            border: 1px solid transparent;
            background-color: #FFC0CB;
            border-radius: 12px;
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
            padding: 20px;
            text-align: center;
        }
        #yesButton, #noButton {
            font-size: 20px;
            border-radius: 12px;
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
            padding: 15px;
            border: none;
            cursor: pointer;
            margin: 10px;
        }
        #yesButton {
            background-color: #4CAF50; /* Green */
            color: white;
        }
        #noButton {
            background-color: #f44336; /* Red */
            color: white;
            position: relative; /* important para ma-move sa JS */
        }
        #noButton:disabled {
            background-color: #ddd;
            color: #666;
            box-shadow: none;
        }
        #yesButton:hover, #noButton:hover {
            box-shadow: 0 12px 20px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
        }

        .heart {
            position: fixed;
            top: -100px;
            width: 80px;
            height: 80px;
            background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 29.6"><path fill="%23FF0000" d="M16 29.6c-1-.6-21-12.6-16-20C5.7 5.6 10.3 4 16 11c5.7-7 10.3-5.4 16-2.6 5 7.4-15 19.6-16 20z"/></svg>');
            animation: fall 4s linear infinite;
        }

        @keyframes fall {
            0% { transform: translateY(-100vh); }
            100% { transform: translateY(100vh); }
        }

        #message {
            font-size: 18px;
            color: #333;
            margin-top: 10px;
        }

    </style>
</head>
<body>
    <div id="content">
        <h2 id="question">Would you date me?</h2>
        <button id="yesButton">YES</button>
        <button id="noButton">NO</button>
        <p id="message"></p>
    </div>

    <script>
        var noClickCount = 0;
        var noBtn = document.getElementById('noButton');
        var yesBtn = document.getElementById('yesButton');
        var message = document.getElementById('message');

        noBtn.addEventListener('click', function() {
            noClickCount++;

            if (noClickCount == 1) {
                yesBtn.style.fontSize = '30px';
            } else if (noClickCount == 2) {
                noBtn.style.fontSize = '12px';
                yesBtn.style.fontSize = '40px';
            } else if (noClickCount == 3) {
                yesBtn.style.fontSize = '90px';
                noBtn.style.fontSize = '10px';
            } else if (noClickCount >= 4 && noClickCount < 15) {
                // Random position, stay within viewport
                var maxX = window.innerWidth - noBtn.offsetWidth;
                var maxY = window.innerHeight - noBtn.offsetHeight;
                noBtn.style.position = 'absolute';
                noBtn.style.left = Math.random() * maxX + 'px';
                noBtn.style.top = Math.random() * maxY + 'px';

                if (noClickCount >= 10) {
                    message.innerText = 'Are you sure?';
                    message.style.position = 'absolute';
                    message.style.left = noBtn.style.left;
                    message.style.top = (parseFloat(noBtn.style.top) + 50) + 'px';
                }
            } else if (noClickCount >= 15) {
                message.innerText = 'Oh No! You broke the button :c';
                noBtn.disabled = true;
                noBtn.style.color = 'grey';
            }
        });

        yesBtn.addEventListener('click', function() {
            document.getElementById('question').innerText = 'ehe san date natin te? onda na po';
            for (var i = 0; i < 50; i++) { // 50 hearts para smooth sa phones
                var heart = document.createElement('div');
                heart.className = 'heart';
                heart.style.left = Math.random() * window.innerWidth + 'px';
                heart.style.animationDuration = Math.random() * 2 + 3 + 's'; // 3-5s
                heart.style.animationDelay = Math.random() * 2 + 's';
                document.body.appendChild(heart);
            }
            yesBtn.style.display = 'none';
            noBtn.style.display = 'none';
            message.style.position = 'static';
        });
    </script>
</body>
</html>
